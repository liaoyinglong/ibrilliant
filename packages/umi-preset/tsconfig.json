{
  "compilerOptions": {
    "declaration": false,
    "target": "ES6",
    "module": "CommonJS",
    "sourceMap": false,
    "moduleResolution": "node",
    "importHelpers": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["./src"],
  "references": [{ "path": "../utils" }],
  "exclude": ["node_modules", "example"]
}
